<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/home_Fragment">

    <fragment
        android:id="@+id/home_Fragment"
        android:name="com.im.nbaplayerengine.ui.fragments.Home_Fragment"
        android:label="Players"
        tools:layout="@layout/fragment_home_" >
        <action
            android:id="@+id/action_home_Fragment_to_playerProfile_Fragment"
            app:destination="@id/playerProfile_Fragment" />
    </fragment>
    <fragment
        android:id="@+id/playerProfile_Fragment"
        tools:layout="@layout/fragment_player_profile_"
        android:name="com.im.nbaplayerengine.ui.fragments.PlayerProfile_Fragment"
        android:label="Player Profile" >
        <action
            android:id="@+id/action_playerProfile_Fragment_to_home_Fragment"
            app:destination="@id/home_Fragment" />
        <argument
            app:nullable="true"
            android:name="PlayerCacheEntity"
            app:argType="com.im.nbaplayerengine.data.cache.PlayerCacheEntity"
            android:defaultValue="@null" />

    </fragment>

</navigation>